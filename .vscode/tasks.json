{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vagrant validate (Validate current Vagrantfile)",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "vagrant validate",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "vagrant status",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "vagrant status",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "vagrant reload",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "vagrant reload",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "vagrant destroy",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "vagrant destroy && rm -rf .vagrant/",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "problemMatcher": []
        }
    ]
}